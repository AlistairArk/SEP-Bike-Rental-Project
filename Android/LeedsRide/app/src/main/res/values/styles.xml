<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/Orange</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/Orange</item>
        <item name="colorControlHighlight">@color/Orange</item>
    </style>

    <style name="CalendarDatePickerDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorAccent">@color/Orange</item>
        <item name="colorControlActivated">@color/Orange</item>
        <item name="colorControlHighlight">@color/lightGrey</item>
    </style>

    <style name="CalendarTimePickerDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorAccent">@color/Orange</item>
        <item name="colorControlActivated">@color/Orange</item>
        <item name="colorControlHighlight">@color/lightGrey</item>
    </style>

</resources>

